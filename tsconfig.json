{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "sourceMap": true,
        "experimentalDecorators": true,
        "lib": [
            "es6",
            "es2015",
            "es2016",
            "es2017",
            "dom"
        ],
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "buildOnSave": false,
    "compileOnSave": false,
    "exclude": [
        "node_modules"
    ],
    "types": [
        "node"
    ],
    "files": [
        "*"
    ],
    "awesomeTypescriptLoaderOptions": {
        "userWebpackText": true
    }
}